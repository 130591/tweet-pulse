# pyproject.toml

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"

[project]
name = "tweetpulse"
version = "1.0.0"
description = "Real-time social intelligence platform"
authors = [{name = "Everton PaixÃ£o", email = "everton.paixao16@gmail.com"}]
readme = "README.md"
requires-python = ">=3.11"
license = {text = "MIT"}

dependencies = [
    "fastapi==0.104.1",
    "uvicorn[standard]==0.24.0",
    "sqlalchemy==2.0.23",
    "alembic==1.13.0",
    "pydantic==2.5.0",
    "pydantic-settings==2.1.0",
    "redis==5.0.1",
    "celery==5.3.4",
    "pandas==2.1.3",
    "polars==0.19.11",
    "pyarrow==14.0.0",
    "transformers==4.35.2",
    "torch==2.1.1",
    "tweepy==4.14.0",
    "httpx==0.25.2",
    "psycopg[binary]==3.17.0",
    "python-dotenv==1.0.0",
    "aiosqlalchemy==0.2.0",
]

[project.optional-dependencies]
dev = [
    "pytest==7.4.3",
    "pytest-asyncio==0.21.1",
    "pytest-cov==4.1.0",
    "mypy==1.7.1",
    "ruff==0.1.11",
    "black==23.12.0",
    "isort==5.13.2",
    "pre-commit==3.6.0",
    "faker==22.0.0",
]

[tool.poetry]
packages = [{include = "tweetpulse", from = "src"}]

[tool.mypy]
python_version = "3.11"
strict = true
exclude = ["tests/", "venv/"]

[tool.ruff]
line-length = 100
target-version = "py311"
exclude = ["tests/", ".venv/", "migrations/"]

[tool.black]
line-length = 100
target-version = ["py311"]

[tool.pytest.ini_options]
testpaths = ["tests"]
asyncio_mode = "auto"
addopts = "--strict-markers -v"

[tool.isort]
profile = "black"
line_length = 100