# TweetPulse Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Twitter/X API Configuration
# ============================================
TWITTER_BEARER_TOKEN=your_bearer_token_here
TWITTER_KEYWORDS=python,fastapi,ai,machinelearning

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/tweetpulse
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=tweetpulse

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Application Configuration
# ============================================
# Environment: development, production, staging
# - development/dev/local: Uses LITE version (VADER) automatically
# - production/prod/staging: Uses FULL version (PyTorch) automatically
ENVIRONMENT=development

# Override auto-detection (optional):
# Set to 1 to force LITE version (VADER)
# Set to 0 to force FULL version (PyTorch/Transformers)
# Leave empty to auto-detect based on ENVIRONMENT
# USE_LITE_ENRICHMENT=

# Number of worker processes
NUM_WORKERS=3

# ============================================
# Debug Configuration
# ============================================
ENABLE_DEBUGPY=0
DEBUGPY_PORT=5678

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# Version Selection Guide
# ============================================
# USE_LITE_ENRICHMENT=1 (Recommended for development)
#   - Docker image: ~500 MB
#   - RAM usage: ~500 MB - 1 GB
#   - Build time: ~2-3 minutes
#   - Sentiment: VADER (fast, optimized for social media)
#   - Accuracy: ~80-85%
#
# USE_LITE_ENRICHMENT=0 (For production with resources)
#   - Docker image: ~3.5 GB
#   - RAM usage: ~2-4 GB
#   - Build time: ~10-15 minutes
#   - Sentiment: DistilBERT (slower, more accurate)
#   - Accuracy: ~90-95%
